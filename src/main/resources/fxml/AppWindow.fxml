            <Button fx:id="searchCarsButton" layoutX="28.0" layoutY="191.0" mnemonicParsing="false" onAction="#onSearch" prefHeight="48.0" prefWidth="181.0" stylesheets="@../css/Guzik.css" text="Szukaj aut" />
            <Button layoutX="31.0" layoutY="252.0" mnemonicParsing="false" onAction="#onMyCars" prefHeight="48.0" prefWidth="174.0" stylesheets="@../css/Guzik.css" text="Twoje auta" />
         </children>
      </AnchorPane>
      <Button fx:id="addCarButton" layoutX="450.0" layoutY="46.0" mnemonicParsing="false" onAction="#onAddCarButton" prefHeight="48.0" prefWidth="110.0" text="Admin Panel" visible="false" />
      <TextField fx:id="defaultSearch" layoutX="248.0" layoutY="34.0" prefHeight="25.0" prefWidth="213.0" />
      <Button fx:id="defaultSearchButton" layoutX="472.0" layoutY="31.0" mnemonicParsing="false" onAction="#onDefaultSearch" stylesheets="@../css/MiniGuzik.css" text="Szukaj" />
      <ImageView fitHeight="285.0" fitWidth="273.0" layoutX="259.0" layoutY="300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
