<AnchorPane prefHeight="600.0" prefWidth="519.0" style="-fx-background-color: #E5E5E5;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.AppWindow.AppWindowController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="235.0" style="-fx-background-color: #14213D;">
         <children>
            <ImageView fx:id="avatar" fitHeight="68.0" fitWidth="64.0" layoutX="14.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/avatar.png" />
               </image>
            </ImageView>
            <Label fx:id="loginLabel" alignment="CENTER" layoutX="78.0" layoutY="26.0" prefHeight="55.0" prefWidth="148.0" text="Label" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="33.0" />
               </font>
            </Label>
            <Button fx:id="accountsettingsButton" layoutX="44.0" layoutY="449.0" mnemonicParsing="false" onAction="#onaccountsettingsButtonClick" prefHeight="48.0" prefWidth="148.0" stylesheets="@../css/Guzik.css" text="Settings" />
            <Button fx:id="logoutButton" layoutX="44.0" layoutY="518.0" mnemonicParsing="false" onAction="#onlogoutButtonClick" prefHeight="48.0" prefWidth="148.0" stylesheets="@../css/Guzik.css" text="Log out" />
